<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Pergunta Aqui"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botaoResposta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="83dp"
        android:text="Resposta 1"
        app:layout_constraintStart_toStartOf="@+id/textoResultado"
        app:layout_constraintTop_toBottomOf="@+id/textoResultado" />

    <Button
        android:id="@+id/botaoResposta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Resposta 2"
        app:layout_constraintStart_toStartOf="@+id/botaoResposta1"
        app:layout_constraintTop_toBottomOf="@+id/botaoResposta1" />

    <Button
        android:id="@+id/botaoResposta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Resposta 3"
        app:layout_constraintStart_toStartOf="@+id/botaoResposta2"
        app:layout_constraintTop_toBottomOf="@+id/botaoResposta2" />
</androidx.constraintlayout.widget.ConstraintLayout>